<body>
  <div class="overlay">
    <h1>Christoph & Alessandra</h1>
    <h2>Save the Date: 27.06.2026 – Villa de Ricci Rignana, Greve in Chianti</h2>

    <form id="rsvpForm">
      <label for="name">Name</label>
      <input type="text" id="name" required>

      <label for="email">E-Mail</label>
      <input type="email" id="email" required>

      <label for="adresse">Postanschrift</label>
      <textarea id="adresse" rows="3" required></textarea>

      <button type="submit">Absenden</button>
    </form>

    <button class="download-btn" onclick="downloadExcel()">Adressen herunterladen</button>
  </div>

  <script>
    const entries = [];

    document.getElementById('rsvpForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const adresse = document.getElementById('adresse').value.trim();

      if (name && email && adresse) {
        entries.push({ Name: name, Email: email, Adresse: adresse });

        alert("Vielen Dank! Deine Daten wurden gespeichert.");
        this.reset();
      }
    });

    function downloadExcel() {
      if (entries.length === 0) {
        alert("Es wurden noch keine Daten erfasst.");
        return;
      }

      let csv = 'Name,Email,Adresse\n';
      entries.forEach(row => {
        csv += `"${row.Name}","${row.Email}","${row.Adresse.replace(/\n/g, ' ')}"\n`;
      });

      const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
      const link = document.createElement("a");
      link.href = URL.createObjectURL(blob);
      link.download = "hochzeit_adressen.csv";
      link.click();
    }
  </script>
</body>
